{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals"]
  },
  "include": [
    "src",
    "old/Field.tsx",
    "src/Game.spec.tsx",
    "old/Game.tsx",
    "old/Gameboard.tsx",
    "old/Menu.tsx",
    "old/ScoreBoard.tsx",
    "old/Smile.tsx"
  ]
}
